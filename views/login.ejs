<%- include('layoutTop', { user }) -%>
<main class="container">
  <form method="POST">
    <div class="form-group form-row justify-content-center 
        <%= lastLoginFailed ? 'is-invalid' : ''%>"
    >
      <label for="loginInput" class="col-sm-3 col-md-2">Username or email</label>
      <input type="text" class="form-control col-sm-9 col-md-6" id="loginInput"
        name="login" required
      />
    </div>

    <div class="form-group form-row justify-content-center">
      <label for="passwordInput" class="col-sm-3 col-md-2">Password</label>
      <input type="password" class="form-control col-sm-9 col-md-6" id="passwordInput"
        name="password" required
      />
    </div>

    <div class="invalid-feedback offset-md-2">
      Username or password does not match
    </div>

    <div class="form-row">
      <button type="submit" class="offset-md-2 btn btn-primary">Log in</button>
    </div>

  </form>
</main>
<%- include('layoutBottom') -%>
