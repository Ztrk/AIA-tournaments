<%- include('layoutTop') -%>
<main class="container">
  <form method="POST">
    <div class="form-group form-row justify-content-center">
      <label for="usernameInput" class="col-sm-3 col-md-2">Username</label>
      <input type="text" class="form-control col-sm-9 col-md-6" id="usernameInput">
    </div>
    <div class="form-group form-row justify-content-center">
      <label for="passwordInput" class="col-sm-3 col-md-2">Password</label>
      <input type="password" class="form-control col-sm-9 col-md-6" id="passwordInput">
    </div>
    <div class="form-row">
      <button type="submit" class="offset-md-2 btn btn-primary">Login</button>
    </div>
  </form>
</main>
<%- include('layoutBottom') -%>
