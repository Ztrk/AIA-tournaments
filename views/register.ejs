<%- include('layoutTop') -%>
<main class="container">
  <form method="POST">
    <div class="form-group form-row justify-content-center">
      <label for="usernameInput" class="col-sm-3 col-md-2">Username</label>
      <input type="text" class="form-control col-sm-9 col-md-6" id="usernameInput" name="username">
    </div>
    <div class="form-group form-row justify-content-center">
      <label for="emailInput" class="col-sm-3 col-md-2">Email</label>
      <input type="email" class="form-control col-sm-9 col-md-6" id="emailInput" name="email">
    </div>
    <div class="form-group form-row justify-content-center">
      <label for="passwordInput" class="col-sm-3 col-md-2">Password</label>
      <input type="password" class="form-control col-sm-9 col-md-6" id="passwordInput" name="password">
    </div>
    <div class="form-group form-row justify-content-center">
      <label for="confirmPasswordInput" class="col-sm-3 col-md-2">Confirm password</label>
      <input type="password" class="form-control col-sm-9 col-md-6" id="confirmPasswordInput" name="confirmPassword">
    </div>
    <div class="form-row">
      <button type="submit" class="offset-md-2 btn btn-primary">Register</button>
    </div>
  </form>
</main>
<%- include('layoutBottom') -%>
