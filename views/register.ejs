<%- include('layoutTop', { user }) -%>
<main class="container">
  <form method="POST">

    <div class="form-group form-row justify-content-center">
      <label for="usernameInput" class="col-sm-3 col-md-2">Username</label>
      <input 
        type="text" 
        class="form-control col-sm-9 col-md-6
          <%= registerError.username ? 'is-invalid' : ''%>"
        id="usernameInput" 
        name="username"
        aria-describedby="usernameHelpBlock"
        required
      >
      <small id="usernameHelpBlock" class="offset-md-2 form-text text-muted">
        Username may consist of letters, numbers or underscore, and must be between 4 and 32 characters.
      </small>
      <div class="invalid-feedback offset-md-2">
        <%= registerError.username %>
      </div>
    </div>

    <div class="form-group form-row justify-content-center">
      <label for="firstNameInput" class="col-sm-3 col-md-2">First name</label>
      <input
        type="firstName"
        class="form-control col-sm-9 col-md-6
          <%= registerError.firstName ? 'is-invalid' : ''%>"
        id="firstNameInput"
        name="firstName"
      >
      <div class="invalid-feedback offset-md-2">
        First name is not valid
      </div>
    </div>

    <div class="form-group form-row justify-content-center">
      <label for="lastNameInput" class="col-sm-3 col-md-2">Last name</label>
      <input
        type="lastName"
        class="form-control col-sm-9 col-md-6
          <%= registerError.lastName ? 'is-invalid' : ''%>"
        id="lastNameInput"
        name="lastName"
      >
      <div class="invalid-feedback offset-md-2">
        Last name is not valid
      </div>
    </div>

    <div class="form-group form-row justify-content-center">
      <label for="emailInput" class="col-sm-3 col-md-2">Email</label>
      <input
        type="email"
        class="form-control col-sm-9 col-md-6
          <%= registerError.email ? 'is-invalid' : ''%>"
        id="emailInput"
        name="email"
        required
      >
      <div class="invalid-feedback offset-md-2">
        <%= registerError.email %>
      </div>
    </div>

    <div class="form-group form-row justify-content-center">
      <label for="passwordInput" class="col-sm-3 col-md-2">Password</label>
      <input
        type="password"
        class="form-control col-sm-9 col-md-6
          <%= registerError.password ? 'is-invalid' : ''%>"
        id="passwordInput"
        name="password"
        aria-describedby="passwordHelpBlock"
        required
      >
      <small id="passwordHelpBlock" class="offset-md-2 form-text text-muted">
        Password must be be 5-72 characters long, and must not contain special characters (like á, â, ę, ö or emojis).
      </small>
      <div class="invalid-feedback offset-md-2">
        Password is not valid
      </div>
    </div>

    <div class="form-group form-row justify-content-center">
      <label for="confirmedPasswordInput" class="col-sm-3 col-md-2">Confirm password</label>
      <input
        type="password"
        class="form-control col-sm-9 col-md-6
          <%= registerError.confirmedPassword ? 'is-invalid' : ''%>"
        id="confirmedPasswordInput"
        name="confirmedPassword"
        required
      >
      <div class="invalid-feedback offset-md-2">
        Passwords must match
      </div>
    </div>

    <div class="form-row">
      <button type="submit" class="offset-md-2 btn btn-primary">Register</button>
    </div>
  </form>
</main>
<%- include('layoutBottom') -%>
